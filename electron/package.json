{
  "name": "to-docx-desktop",
  "version": "1.0.0",
  "description": "To-Docx Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "docx",
    "converter",
    "epub",
    "audio",
    "video"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "asynckit": "^0.5.0",
    "axios": "^1.6.2",
    "combined-stream": "^1.0.8",
    "form-data": "^4.0.0",
    "mime-types": "^3.0.2"
  },
  "build": {
    "appId": "com.todocx.desktop",
    "productName": "AI拆书拆课神器",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/dist/to-docx-backend.exe",
        "to": "backend/to-docx-backend.exe"
      },
      {
        "from": "../backend/.env",
        "to": "backend/.env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI拆书拆课神器",
      "perMachine": false,
      "allowElevation": true
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "electron"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
